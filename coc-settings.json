
{
  "coc.preferences.extensionUpdateCheck": "daily",
  "coc.preferences.formatOnSaveFiletypes": [
    "json",
    "jsonc",
    "c",
    "cpp",
    "cmake",
    "python",
    "xml",
    "html",
    "xhtml",
    "yaml",
    "css",
    "markdown",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "rust",
    "go"
  ],
  "suggest.minTriggerInputLength": 1,
  "suggest.noselect": false,
  "suggest.selection": "recentlyUsedByPrefix",
  "suggest.languageSourcePriority": 99,
  "snippets.extends": {
    "cpp": ["c"],
    "javascriptreact": ["javascript"],
    "typescriptreact": ["javascript", "typescript"]
  },
  "yank.highlight.enable": false,
  "yank.list.maxsize": 100,
  "yank.priority": 30,
  "clangd.arguments": [
    "-j=20",
    "--header-insertion=never",
    "--background-index",
    "--limit-references=500",
    "--limit-results=50",
    "--pch-storage=memory"
  ],
  "cmake.cmakePath": "cmake",
  "cmake.formatter": "cmake-format",
  "python.pythonPath": "python3",
  "python.formatting.provider": "yapf",
  "json.enable": true,
  "json.format.enable": false,
  "eslint.run": "onSave",
    "languageserver": {
      "haskell": {
        "command": "haskell-language-server-wrapper",
        "args": ["--lsp", "-j2"],
        "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
        "filetypes": ["haskell", "lhaskell"]
      },
  "golang": {
    "command": "gopls",
    "rootPatterns": ["go.mod", ".git/"],
    "filetypes": ["go"]
  }
    }
}
